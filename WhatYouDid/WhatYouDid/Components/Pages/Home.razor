@page "/"

<PageTitle>Home</PageTitle>

<p>Insert Logo Here</p>

<AuthorizeView>
	<Authorized>
		<p>
			Hi @context.User.Identity?.Name!
		</p>
		<p>
			<RadzenButton ButtonStyle="ButtonStyle.Primary">Start Workout</RadzenButton>
		</p>
		<p>
			<RadzenButton ButtonStyle="ButtonStyle.Secondary">View Account</RadzenButton>
		</p>
	</Authorized>
	<NotAuthorized>
		<p>
			<RadzenButton ButtonStyle="ButtonStyle.Primary">Log In</RadzenButton>
		</p>
		<p>
			<RadzenButton ButtonStyle="ButtonStyle.Secondary">Create Account</RadzenButton>
		</p>
	</NotAuthorized>
</AuthorizeView>